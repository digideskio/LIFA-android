            <TextView
                android:id="@+id/shopTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopAddress"
                android:layout_marginTop="@dimen/feed_item_margin"
                android:text="9am - 9pm"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/bookNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_element_margin"
                android:background="@color/brand_color_light"
                android:padding="@dimen/feed_item_padding_left_right"
                android:text="Book Now"
                android:textColor="@color/white" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
