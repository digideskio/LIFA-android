        android:background="#555555"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent_white"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/feed_item_margin"
                android:text="Viral Hair Cut"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/brand_color_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/barberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopName"
                android:layout_marginTop="@dimen/feed_item_margin"
                android:text="Mr.Lakshman"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/shopAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/barberName"
                android:layout_marginTop="@dimen/feed_item_margin"
                android:text="172/1,P.R Building,3rd Floor,BTM 1st Stage,Bangalore-560029"
                android:textAppearance="?android:attr/textAppearanceMedium" />
