<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="8dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/subRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_element_margin"
                android:text="Value Hair Cut"
                android:textColor="@android:color/black"
                android:textSize="@dimen/main_title" />

            <TextView
                android:id="@+id/bookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/view_element_margin"
                android:text="07-09-2014"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sub_headings" />

            <TextView
                android:id="@+id/barberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/shopName"
                android:layout_marginTop="@dimen/view_element_margin"
                android:text="Barber Name"
                android:textSize="@dimen/sub_headings" />

            <TextView
                android:id="@+id/shopAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/barberName"
                android:layout_marginTop="@dimen/feed_item_margin"
                android:text="172/1,P.R Building,3rd Floor,BTM 1st Stage,Bangalore-560029"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/uniquePin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/shopAddress"
                android:layout_marginTop="@dimen/view_element_margin"
                android:text="Unique PIN: 8527"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sub_headings" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/uniquePin"
                android:layout_marginBottom="@dimen/divider_spacing"
                android:layout_marginTop="@dimen/divider_spacing"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/divider2"
                android:text="Barber Unavailable"
                android:textSize="@dimen/sub_headings"
                android:textColor="@color/brand_color_light"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/bookNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/divider2"
                android:background="@color/brand_color_light"
                android:padding="5dp"
                android:text="Cancel"
                android:textColor="@color/white" />

            <!-- <ProgressBar
                 android:id="@+id/progressBar"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBottom="@+id/productImageRow"
                 android:layout_alignEnd="@+id/productTitleRow"
                 android:layout_alignRight="@+id/productTitleRow"
                 android:visibility="gone" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>